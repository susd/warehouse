<div class="page-header">
  <h2>Product Groups</h2>
  
  <table class="table">
    <tr>
      <th>Group Number</th>
      <th>Name</th>
      <th>Budget</th>
      <th></th>
    </tr>
    <% @product_groups.each do |product_group| %>
    <tr>
      <td><%= product_group.group_number || '--' %></td>
      <td><%= product_group.name || '--' %></td>
      <td><%= product_group.budget || '--' %></td>
      <td>
        <%= link_to 'Edit', edit_product_group_path(product_group) %> |
        <%= link_to 'Remove', product_group, method: :delete, confirm: "Are you sure you want to remove this group?" %>
      </td>
    </tr>
    <% end %>
  </table>
</div>