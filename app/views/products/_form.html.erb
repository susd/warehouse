<%= bootstrap_form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.text_field :item_id %>
  <%= f.text_field :description %>
  <%= f.text_field :measure %>
  <%= f.text_field :cost %>
  
  <div class="form-group">
    <label for="product_state" class="control-label">State</label><br>
    <%= f.radio_button :state, 'enabled', label: "Enabled", checked: @product.enabled?, inline: true %>
    <%= f.radio_button :state, 'disabled', label: "Disabled", checked: @product.disabled?, inline: true %>
  </div>
  
  <div class="actions">
    <%= f.submit 'Update Product', class: 'btn btn-primary' %>
  </div>
<% end %>
