<div class="page-header">
  <h1>Editing product</h1>
</div>

<div class="row">
  <div class="col-md-2">
    
    <%= link_to products_path, class: 'btn btn-block btn-default' do %>
      <span class="glyphicon glyphicon-arrow-left"></span>
      All Products
    <% end %>
    <hr>
    <%= link_to 'Delete', product_path(@product), method: :delete, class: 'btn btn-block btn-danger', data: {confirm: "Are you sure?"} %>
    
  </div>
  
  <div class="col-md-10">
    <%= render 'form' %>
  </div>
</div>
