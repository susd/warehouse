<div class="page-header">
  <h1>Editing product</h1>
</div>

<div class="row">
  <div class="col-md-2">
    <%= link_to products_path, class: 'btn btn-block btn-default' do %>
      <span class="glyphicon glyphicon-arrow-left"></span>
      All Products
    <% end %>
    <hr>
    <% if @product.deletable? %>
      <%= link_to 'Delete', product_path(@product), method: :delete, class: 'btn btn-block btn-danger', data: {confirm: "Are you sure?"} %>
    <% else %>
      This product is referenced in orders and cannot be deleted.
      You can disable it to keep it from being ordered from now on.
    <% end %>
  </div>
  
  <div class="col-md-10">
    <%= render 'form' %>
  </div>
</div>
