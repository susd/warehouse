<tr class="line_item-fields">
  <%= f.hidden_field :id %>
  <%= f.hidden_field :product_id %>
  <td><%= f.object.description %></td>
  <td>
    <%= f.text_field :quantity, size: 2 %>
  </td>
  <td><%= f.object.measure %></td>
  <td><%= number_to_currency f.object.total %></td>
  <td>
    <%= f.hidden_field :_destroy %>
    <a href="#" class="btn btn-xs btn-danger line_item-remove">
      <span class="glyphicon glyphicon-remove"></span>
    </a>
  </td>
</tr>