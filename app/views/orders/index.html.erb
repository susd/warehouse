<div class="page-header">
  <h1>Listing orders</h1>
</div>



<table class="table table-striped clickable">
  <thead>
    <tr>
      <th>Order</th>
      <th>Site</th>
      <th>Started by</th>
      <th>State</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr href="<%= order_path(order) %>">
        <td>
          <%= link_to order.id, order %>
        </td>
        <td><%= order.site.name %></td>
        <td><%= order.user.name %></td>
        <td><%= order.state %></td>
        <% if current_user.can_edit_orders? && order.editable? %>
          <td><%= link_to 'Edit', edit_order_path(order) %></td>
          <td><%= link_to 'Cancel', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


